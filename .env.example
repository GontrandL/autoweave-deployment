# AutoWeave Environment Configuration
# Copy this file to .env and fill in your values

# Core Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=3000
HOST=0.0.0.0

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Memory System Configuration
# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Memgraph Graph Database
MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687
MEMGRAPH_USERNAME=memgraph
MEMGRAPH_PASSWORD=memgraph

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Memory System Options
MEM0_SELF_HOSTED=true
MEMORY_CACHE_TIMEOUT=300000

# Agent Network Protocol (ANP)
ANP_PORT=8083
ANP_EXTERNAL_REGISTRIES=

# Model Context Protocol (MCP)
MCP_PORT=3002
MCP_DISCOVERY_INTERVAL=60000

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
KAGENT_NAMESPACE=default
KAGENT_SERVICE_ACCOUNT=autoweave-kagent

# Agent Configuration
AGENT_DEFAULT_TIMEOUT=300000
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=1000

# UI Configuration
UI_WEBSOCKET_PORT=3001
UI_SESSION_TIMEOUT=3600000

# Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN=

# Development
DEBUG=false
MOCK_MODE=false

# Self-Awareness Configuration
SELF_AWARENESS_ENABLED=true
SELF_AWARENESS_SCAN_INTERVAL=300000
CLAUDE_GENOME_ENABLED=true
CLAUDE_TRACKING_LEVEL=full

# Fresh Sources Configuration
DOCKERHUB_ENABLED=true
NPM_ENABLED=true
GITHUB_ENABLED=true
ARTIFACTHUB_ENABLED=true

# Integration Agent
PYTHON_PATH=python3
INTEGRATION_AGENT_TIMEOUT=600000

# Deployment
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=